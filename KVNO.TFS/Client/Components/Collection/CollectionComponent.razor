<RadzenDataGrid Data="@ProjectsWithDetails" TItem="ProjectWithDetails" AllowFiltering="true" AllowColumnResize="true"
                AllowSorting="true" PageSize="20" AllowPaging="true" ShowPagingSummary="true">
<Columns>
        <RadzenDataGridColumn TItem="ProjectWithDetails" Title="" Context="pwd" Width="80px">
        <Template>
                <RadzenImage Path="@Check(pwd.WorkItemsDetails.EstimatedTime,pwd.WorkItemsDetails.CompletedTime)" class="rz-gravatar" />
        </Template>
    </RadzenDataGridColumn>
    <RadzenDataGridColumn TItem="ProjectWithDetails" Title="Name">
        <Template Context="data">
            @data.Project.Name
        </Template>
    </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ProjectWithDetails" Title="Estimated Time" Width="200px">
            <Template Context="data">
                @data.WorkItemsDetails.EstimatedTime
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ProjectWithDetails" Title="Remaining Time" Width="200px">
            <Template Context="data">
                @data.WorkItemsDetails.RemainingTime
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ProjectWithDetails" Title="Completed Time" Width="200px">
            <Template Context="data">
                @data.WorkItemsDetails.CompletedTime
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ProjectWithDetails" Title="Count" Width="120px">
            <Template Context="data">
                @data.WorkItemsDetails.Count
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="ProjectWithDetails" Title="Action" Width="120px">
            <Template Context="data">
                <RadzenButton Text="Open" Click="@(args => Open(data.Project.Id))" ButtonStyle="ButtonStyle.Danger"></RadzenButton>
            </Template>
        </RadzenDataGridColumn>
</Columns>
</RadzenDataGrid>


